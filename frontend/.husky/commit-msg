# Backend: GrumPHP commit message validation (Conventional Commits)
GIT_USER=$(git config user.name)
GIT_EMAIL=$(git config user.email)
COMMIT_MSG_FILE=$1
DIFF=$(git -c diff.mnemonicprefix=false -c diff.noprefix=false --no-pager diff -r -p -m -M --full-index --no-color --staged | cat)
export GRUMPHP_GIT_WORKING_DIR="$(git rev-parse --show-toplevel)"
(cd "./" && printf "%s\n" "${DIFF}" | docker compose exec -T app vendor/bin/grumphp git:commit-msg "--git-user='$GIT_USER'" "--git-email='$GIT_EMAIL'" "$COMMIT_MSG_FILE")
