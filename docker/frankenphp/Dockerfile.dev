FROM dunglas/frankenphp:1-php8.5-alpine

# Install mlocati/docker-php-extension-installer for easier extension management
ADD --chmod=0755 https://github.com/mlocati/docker-php-extension-installer/releases/latest/download/install-php-extensions /usr/local/bin/

# Install system dependencies
RUN apk add --no-cache \
    git \
    curl \
    zip \
    unzip \
    linux-headers

# Install PHP extensions using install-php-extensions (handles PHP 8.5 compatibility)
RUN install-php-extensions \
    pdo_pgsql \
    intl \
    opcache \
    zip \
    bcmath \
    redis \
    xdebug

# Install Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Set working directory
WORKDIR /app

# Copy PHP configuration
COPY docker/frankenphp/php.ini /usr/local/etc/php/conf.d/app.ini
COPY docker/frankenphp/xdebug.ini /usr/local/etc/php/conf.d/xdebug.ini
COPY docker/frankenphp/Caddyfile /etc/caddy/Caddyfile

# Expose ports
EXPOSE 80 443 443/udp

# FrankenPHP server with hot reload
CMD ["frankenphp", "run", "--config", "/etc/caddy/Caddyfile", "--watch"]
